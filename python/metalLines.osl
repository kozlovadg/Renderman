surface metalLines (
	color Cin=1,
	float scale=1,
    float angle = -15.0,
output float resultRound=0,
output float resultStripes=0,
	)
{
    point PPP=transform("shader",P)*scale;
    float rot = radians(angle);
    point d = rotate(PPP, rot, point(0,0,0), point(0,0,1));
    float x = mod(d[0],1);
    for(int i=1; i <= 10; i++)
	{
        if( x < (float)i/10 )
            {
            resultStripes = i % 2;
            break;
            }
    }
}
